datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  id          String        @id @default(cuid())
  firstName   String
  lastName    String
  email       String        @unique
  Appointment Appointment[]
}

model Service {
  id                  String                @id @default(cuid())
  name                String
  // in seconds
  serviceDuration     Int
  // in seconds
  breakDuration       Int?
  // how many days from now can be booked
  maxBookableDays     Int?
  maxClientPerSlot    Int?
  ServiceOpeningHours ServiceOpeningHours[]
  ServiceBreak        ServiceBreak[]
  ServiceOffTime      ServiceOffTime[]
  Appointment         Appointment[]
}

model ServiceOpeningHours {
  id        String  @id @default(cuid())
  // 0=sunday, ...,6=saturday
  weekDay   Int
  // in seconds from the start of the day
  startTime Int
  // in seconds from the start of the day
  endTime   Int
  service   Service @relation(fields: [serviceId], references: [id])
  serviceId String
}

model ServiceBreak {
  id        String  @id @default(cuid())
  name      String
  // in seconds from the start of the day
  startTime Int
  // in seconds from the start of the day
  endTime   Int
  service   Service @relation(fields: [serviceId], references: [id])
  serviceId String
}

model ServiceOffTime {
  id        String   @id @default(cuid())
  name      String
  // full date and time
  start     DateTime
  // full date and time
  end       DateTime
  service   Service  @relation(fields: [serviceId], references: [id])
  serviceId String
}

model Appointment {
  id        String  @id @default(cuid())
  client    Client  @relation(fields: [clientId], references: [id])
  service   Service @relation(fields: [serviceId], references: [id])
  // full date and time
  startTime Int
  clientId  String
  serviceId String
}
